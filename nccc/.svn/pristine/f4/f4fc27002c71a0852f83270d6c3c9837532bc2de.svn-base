{% load staticfiles %}
<link rel="stylesheet" type="text/css" href="{% static 'css/erm_css/login-page.css' %}" />


<script type="text/javascript" src="{% static 'jquery-1.12.1/jquery-1.12.1.min.js' %}" ></script>
<script type="text/javascript" src="{% static 'js/erm_js/login.js' %}" ></script>


<!DOCTYPE html>

<script type="text/javascript">
	$(document).ready(function(){
		$('input#uid').val('');
		$('input#pwd').val('');
	});
</script>

<html>
	<head>
		
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<link rel="icon" href="/static/icons/erm.ico">
		<title>NCCC ERM's DTR</title>
		
	</head>

	<body>
		<div class="container-fluid">
			<div class="row">
				&nbsp;
			</div>
			<div class="row">
				<hgroup id="headerbg">
				  <h1>NCCC ERM's DTR</h1>
				</hgroup>
			</div>
			
			<div class="row">
				<form method="post" action="/ERM/authenticate/">
				  {% csrf_token %}
				  <div class="group">
				    <input type="text" name="uid" id="uid">
				    <span class="highlight"></span>
				    <span class="bar"></span>
				    <label>Company ID</label>
				  </div>
				  <div class="group">
				    <input type="password" name="pwd" id="pwd">
				    <span class="highlight"></span><span class="bar"></span>
				    <label>Password</label>
				  </div>
				  <button type="submit" class="button buttonBlue">
				  	Login
				    <div class="ripples buttonRipples">
				    	<span class="ripplesCircle"></span>
				    </div>
				  </button>
					<p align="center">&nbsp; {{ message }} &nbsp;</p>
				</form>
				
			</div>
			<div class="footer">
				&nbsp;
			</div>
			
		</div>
	</body>
</html>